# Ghostty Configuration with Catppuccin Latte Theme
# This configuration creates perfect harmony with the Neovim Catppuccin latte theme

# === CATPPUCCIN LATTE COLOR SCHEME ===
# Base colors (exact hex values from Catppuccin latte palette)
background = #eff1f5
foreground = #4c4f69
cursor-color = #dc8a78

# Selection colors
selection-background = #acb0be
selection-foreground = #4c4f69

# ANSI color palette (16 colors) - Catppuccin latte theme
palette = 0=#5c5f77
palette = 1=#d20f39
palette = 2=#40a02b
palette = 3=#df8e1d
palette = 4=#1e66f5
palette = 5=#8839ef
palette = 6=#179299
palette = 7=#acb0be
palette = 8=#6c6f85
palette = 9=#d20f39
palette = 10=#40a02b
palette = 11=#df8e1d
palette = 12=#1e66f5
palette = 13=#8839ef
palette = 14=#179299
palette = 15=#4c4f69

# === VISUAL ENHANCEMENTS ===
background-opacity = 0.97
background-blur-radius = 20

# Font configuration for crisp readability
font-size = 13
font-feature = +calt,+liga

# Cursor settings for better visibility
cursor-style = block
cursor-style-blink = false
cursor-opacity = 1.0

# Window appearance
window-padding-x = 0
window-padding-y = 0
window-height = 40
window-width = 180

# === SPLIT MANAGEMENT ===
# Visual feedback for splits
unfocused-split-opacity = 0.7

# Split creation keybindings (match vim-like navigation)
keybind = super+shift+h=new_split:left
keybind = super+shift+j=new_split:down
keybind = super+shift+k=new_split:up
keybind = super+shift+l=new_split:right

# Navigate between splits
keybind = super+ctrl+h=goto_split:left
keybind = super+ctrl+j=goto_split:down
keybind = super+ctrl+k=goto_split:up
keybind = super+ctrl+l=goto_split:right

# Resize splits
keybind = super+alt+h=resize_split:left,10
keybind = super+alt+j=resize_split:down,10
keybind = super+alt+k=resize_split:up,10
keybind = super+alt+l=resize_split:right,10

# Equalize splits
keybind = super+alt+equal=equalize_splits

# Close current split
keybind = super+shift+x=close_surface

# Cycle through splits  
keybind = super+bracket_left=goto_split:previous
keybind = super+bracket_right=goto_split:next

# === ADDITIONAL TERMINAL ENHANCEMENTS ===
# Better scrolling and mouse support
scrollback-limit = 100000
mouse-hide-while-typing = true

# Window title and shell integration  
shell-integration = detect
shell-integration-features = cursor,sudo,title

# Performance optimizations
auto-update = check

macos-option-as-alt = true